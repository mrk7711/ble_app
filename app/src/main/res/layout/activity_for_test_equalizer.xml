<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background">

    <com.example.ble_application.EqualizerBackgroundView
        android:id="@+id/equalizerBackground"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/soundsetting"
        android:textAlignment="center"
        android:textColor="@color/font"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label"
        android:layout_marginTop="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/arnica8"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/font" />

            <SeekBar
                android:id="@+id/seekBar2"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layoutDirection="ltr"
                android:max="6"
                android:min="-6"
                android:progress="0"
                android:progressTint="@color/arnica4"
                android:rotation="270"
                android:thumbTint="@color/arnica4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:gravity="center"
                android:text="@string/Bass"
                android:textColor="@color/font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/arnica8"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/font" />

            <SeekBar
                android:id="@+id/seekBar3"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layoutDirection="ltr"
                android:max="6"
                android:min="-6"
                android:progress="0"
                android:progressTint="@color/arnica4"
                android:rotation="270"
                android:thumbTint="@color/arnica4" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layoutDirection="ltr"
                android:text="@string/Middle"
                android:textColor="@color/font" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="@color/arnica8"
                android:text="0"
                android:textSize="20dp"
                android:textColor="@color/font" />

            <SeekBar
                android:id="@+id/seekBar4"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:max="6"
                android:min="-6"
                android:layoutDirection="ltr"
                android:progress="0"
                android:progressTint="@color/arnica4"
                android:rotation="270"
                android:thumbTint="@color/arnica4" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/Treble"
                android:layoutDirection="ltr"
                android:textColor="@color/font" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:layout_below="@id/l1"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/speech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Morespeech"
                android:textSize="12sp"
                android:textColor="@color/font"
                android:drawableTint="@color/font"
                android:drawableTop="@drawable/baseline_hearing_24"
                android:backgroundTint="@color/background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/clarity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Moreclarity"
                android:textSize="12sp"
                android:textColor="@color/font"
                android:drawableTint="@color/font"
                android:drawableTop="@drawable/baseline_hearing_24"
                android:backgroundTint="@color/background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/sharp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lesssharp"
                android:textSize="12sp"
                android:textColor="@color/font"
                android:drawableTint="@color/font"
                android:drawableTop="@drawable/baseline_hearing_24"
                android:backgroundTint="@color/background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/echo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lessecho"
                android:textSize="12sp"
                android:textColor="@color/font"
                android:drawableTint="@color/font"
                android:drawableTop="@drawable/baseline_hearing_24"
                android:backgroundTint="@color/background" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/reset2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/arnica8"
        android:text="@string/reset"
        android:textSize="20dp"
        android:textColor="@color/font"
        android:layout_alignParentBottom="true"/>
    <!--android:drawableTop="@drawable/baseline_restart_alt_24"-->
</RelativeLayout>
